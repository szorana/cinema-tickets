@model CinemaTickets.Domain.DTO.AddToCartDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add selected ticket to your cart!</h3>

<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddTicketToCart">
            <input type="hidden" asp-for="SelectedTicketId"/>
            <div class="form-group">
                <label asp-for="SelectedTicket.MovieName"></label>
                <input disabled asp-for="SelectedTicket.Genre" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
